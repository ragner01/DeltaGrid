{
  "Ingestion": {
    "TagConfigPath": "config/tags.yaml"
  },
  "EventHubs": {
    "HubName": "ingestion"
  },
  "Connectors": {
    "OpcUa": {
      "Enabled": true,
      "EndpointUrl": "opc.tcp://localhost:4840",
      "SiteId": "site-1",
      "AssetId": "asset-1",
      "NodeIds": [ "ns=2;s=well1.tubing_pressure" ]
    },
    "Mqtt": {
      "Enabled": true,
      "Broker": "mqtt://localhost:1883",
      "Topic": "ioc/+/+",
      "SiteId": "site-1",
      "AssetId": "asset-1"
    },
    "Pi": {
      "Enabled": false,
      "BaseUrl": "https://localhost/piwebapi",
      "TagPath": "/streams/{webid}/value",
      "BearerToken": "${PI_BEARER_TOKEN:-}",
      "SiteId": "site-1",
      "AssetId": "asset-1"
    }
  }
}
